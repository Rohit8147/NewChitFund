<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contact_list_back_white_img"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/alphabetapproveHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/listheaderbg"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivapprovememberprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/user_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvapprovemembername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="member"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/addMemberNameList" />

            <TextView
                android:id="@+id/tvapprovemembermobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="9999999999"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#4b4b4b"
                android:textSize="@dimen/addMemberMobileList"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/checkbox_checked"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivdisapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/checkbox_unchecked"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/memberdelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/trash_delete"
            android:visibility="gone"
            />
    </LinearLayout>

  <!--   <View
        android:id="@+id/rowdivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/gray_separation" /> -->

</LinearLayout>