				boolean validation = false;

				// Convert bitmap to bytes
				if(bitmapSquare!=null) {
					ByteArrayOutputStream stream = new ByteArrayOutputStream();
					bitmapSquare.compress(Bitmap.CompressFormat.JPEG, 100, stream);
