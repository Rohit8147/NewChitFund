<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_header_bar" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/back_icon2"
            android:drawablePadding="2dp"
            android:text="@string/btn_settingsLabel"
            android:textColor="#fff"
            android:textSize="@dimen/tv_back" />

        <ImageView
            android:id="@+id/btn_editSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/header_edit_icon"
            android:contentDescription="@string/btn_editSettingsImage" />

        <ImageView
            android:id="@+id/btn_saveSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/donebutton"
            android:contentDescription="@string/btn_saveSettingsImage" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_profPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:src="@drawable/profile_photo"
            android:contentDescription="@string/iv_profPic" />

        <EditText
            android:id="@+id/et_mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/gray_field_img_settings"
            android:hint="@string/et_mName"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textSize="@dimen/et_mName" />

        <EditText
            android:id="@+id/et_mEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:background="@drawable/gray_field_img_settings"
            android:hint="@string/et_mEmail"
            android:inputType="textEmailAddress"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/et_mEmail" />

        <EditText
            android:id="@+id/et_mPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/gray_field_img_settings"
            android:hint="@string/et_mPhone"
            android:inputType="phone"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textSize="@dimen/et_mPhone" />

        <EditText
            android:id="@+id/et_mOldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/gray_field_img_settings"
            android:hint="@string/et_mOldPassword"
            android:inputType="textPassword"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/et_mOldPassword" />

        <EditText
            android:id="@+id/et_mNewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/gray_field_img_settings"
            android:hint="@string/et_mNewPassword"
            android:inputType="textPassword"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/et_mNewPassword" />

        <EditText
            android:id="@+id/et_mConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/gray_field_img_settings"
            android:hint="@string/et_mConfirmPassword"
            android:inputType="textPassword"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/et_mConfirmPassword" />
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20dp"
            android:text="@string/tv_logout"
            android:textColor="#ff2f33"
            android:textSize="@dimen/tv_logout" />
        
    </RelativeLayout>

</LinearLayout>