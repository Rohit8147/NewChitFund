<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_back_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_backIcon"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/back_icon2"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="@string/tv_backIcon"
        android:textColor="#fff"
        android:textSize="@dimen/tv_backIcon" />

    <ImageView
        android:id="@+id/iv_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/iv_separator"
        android:src="@drawable/topheader_separator" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_picCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/iv_picCircle"
            android:gravity="center"
            android:src="@drawable/profile_photo" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/signup_field_image"
            android:hint="@string/et_name"
            android:inputType="textCapSentences"
            android:maxLength="25"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/et_name" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/signup_field_image"
            android:hint="@string/et_email"
            android:inputType="textEmailAddress"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/et_email" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/signup_field_image"
            android:hint="@string/et_phone"
            android:inputType="phone"
            android:maxLength="10"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/et_phone" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/signup_field_image"
            android:hint="@string/et_password"
            android:inputType="textPassword"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/et_password" />

        <EditText
            android:id="@+id/et_confirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/signup_field_image"
            android:hint="@string/et_confirmPassword"
            android:inputType="textPassword"
            android:maxWidth="322dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/et_confirmPassword" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/done_button"
            android:paddingLeft="10dp"
            android:singleLine="true" />
        
    </LinearLayout>

</LinearLayout>