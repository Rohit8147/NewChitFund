    <TextView android:id="@+id/tv_backIcon"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:text="@string/tv_backIcon"
        android:drawableLeft="@drawable/back_icon2"
        android:drawablePadding="2dp"
        android:contentDescription="@string/tv_backIconLabel"
	     />
	    
    <ImageView android:id="@+id/iv_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/topheader_separator"
        android:contentDescription="@string/iv_separator" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:focusableInTouchMode="true" >
	    
	    <TextView android:id="@+id/tv_picCircle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="left"
	        android:gravity="center"
	        android:background="@drawable/pic_circle_img"
	        android:text="@string/tvProfilePhotoText"
	        android:textColor="#fff"
	        android:width="0dip"
	        />
	    
        <!-- digits attribute is used to avoid Reg Ex in validation for et_name -->
	    <EditText android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:maxWidth="322dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
	        android:layout_marginTop="20dp"
	        android:textColor="#fff"
	        android:singleLine="true"
            android:background="@drawable/signup_field_image"
            android:hint="@string/et_name"
            android:maxLength="25"
            android:inputType="textCapSentences"
            android:textColorHint="#fff" />
	    
        <EditText android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:maxWidth="322dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
	        android:layout_marginTop="25dp"
	        android:textColor="#fff"
	        android:paddingBottom="5dp"
	        android:singleLine="true"
            android:background="@drawable/signup_field_image"
            android:inputType="textEmailAddress"
            android:hint="@string/et_email"
            android:textColorHint="#fff" />
	    
        <EditText android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:maxWidth="322dp"
            android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:textColor="#fff"
            android:background="@drawable/signup_field_image"
	        android:singleLine="true"
            android:inputType="phone"
            android:maxLength="10"
            android:paddingBottom="5dp"
            android:hint="@string/et_phone"
            android:textColorHint="#fff" />
	    
        <EditText android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:maxWidth="322dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
	        android:layout_marginTop="25dp"
	        android:textColor="#fff"
	        android:singleLine="true"
            android:background="@drawable/signup_field_image"
            android:inputType="textPassword"
            android:hint="@string/et_password"
            android:textColorHint="#fff"
            android:paddingBottom="5dp"
             />
	    
        <EditText android:id="@+id/et_confirmPassword"
            android:layout_width="wrap_content"
            android:maxWidth="322dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
	        android:layout_marginTop="25dp"
	        android:textColor="#fff"
	        android:singleLine="true"
	        android:paddingBottom="5dp"
            android:background="@drawable/signup_field_image"
            android:inputType="textPassword"
            android:hint="@string/et_confirmPassword"
            android:textColorHint="#fff"
             />
                    
		<Button android:id="@+id/btn_done"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:paddingLeft="10dp"
	        android:layout_marginTop="35dp"
	        android:singleLine="true"
	        android:background="@drawable/done_button"
	         />	        
        	        	        	        
    </LinearLayout>	    
</LinearLayout>
