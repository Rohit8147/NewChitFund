<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_custom_chit_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_chit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/chit_icon" />

        <LinearLayout
            android:id="@+id/ll_chit_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1.5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_chitName_chitAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_chit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Chit Name"
                    android:textColor="#509c54"
                    android:textSize="@dimen/view_chits_chit_name_size" />

                <TextView
                    android:id="@+id/tv_chit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="100000"
                    android:textColor="#e64646"
                    android:textSize="@dimen/view_chits_amount_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_chit_Start_Bid_Dates"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_chit_start_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_month_label"
                        android:textColor="#000000"
                        android:textSize="@dimen/view_chits_date_size" />

                    <TextView
                        android:id="@+id/tv_chit_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27/05/14"
                        android:textColor="#555"
                        android:textSize="@dimen/view_chits_date_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_chit_bid_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bid_date_label"
                        android:textColor="#000000"
                        android:textSize="@dimen/view_chits_date_size" />

                    <TextView
                        android:id="@+id/tv_chit_bid_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/06/14"
                        android:textColor="#555"
                        android:textSize="@dimen/view_chits_date_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_chit_pay_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_date_label"
                    android:textColor="#000000"
                    android:textSize="@dimen/view_chits_date_size" />

                <TextView
                    android:id="@+id/tv_chit_pay_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/06/14"
                    android:textColor="#555"
                    android:textSize="@dimen/view_chits_date_size" />
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>