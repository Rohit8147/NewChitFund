<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
 
    <Button android:id="@+id/btn_categoriesLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_header_bar"
        android:text="@string/btn_categoriesLabel"
        android:textSize="@dimen/btn_categoriesLabel"
        android:textColor="#fff" />
    
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btn_categoriesLabel"
        android:gravity="center"
        android:background="#fff" >
        
	    <Button android:id="@+id/btn_createChit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="20dp"
	        android:layout_marginBottom="30dp"
	        android:background="@drawable/creat_chit_img" />
	
	    <Button android:id="@+id/btn_viewChits"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/btn_createChit"
	        android:layout_marginBottom="30dp"
	        android:background="@drawable/view_chit_img" />
	
	    <Button android:id="@+id/btn_addMember"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/btn_createChit"
	        android:layout_marginRight="20dp"
	        android:layout_marginBottom="30dp"
	        android:background="@drawable/add_mem_button" />
	
	    <Button android:id="@+id/btn_approveDisapproveMember"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/btn_viewChits"
	        android:layout_toRightOf="@+id/btn_addMember"
	        android:layout_marginBottom="30dp"
	        android:background="@drawable/app_disp_button" />
	
	    <Button android:id="@+id/btn_changePaymentStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/btn_addMember"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/pay_status_button" />
	
	    <Button android:id="@+id/btn_settings"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/btn_approveDisapproveMember"
	        android:layout_toRightOf="@+id/btn_changePaymentStatus"
	        android:background="@drawable/setting_button" />        
    </RelativeLayout>


</RelativeLayout>