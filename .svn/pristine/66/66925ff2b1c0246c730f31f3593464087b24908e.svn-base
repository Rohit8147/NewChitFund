<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/iv_logo"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/et_mUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColorHint="#9e9e9e"
            android:textColor="#555555"
            android:textSize="15sp"
            android:paddingBottom="2dp"
            android:background="@drawable/field_image"
            android:inputType="phone"
            android:maxLength="10"
            android:hint="@string/et_mUsername"
             />

        <EditText
            android:id="@+id/et_mPassword"
            android:layout_width="wrap_content"
            android:maxWidth="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#555555"
            android:textSize="15sp"
            android:paddingBottom="2dp"
            android:textColorHint="#9e9e9e"
            android:background="@drawable/field_image"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="@string/et_mPassword"
             />

        <TextView
            android:id="@+id/tv_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="@string/tv_forgotPassword"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_button" />
    </LinearLayout>

    
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true" >
            
        <TextView android:id="@+id/tv_notMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_notMember"
            android:textColor="#8195a1"
            android:textSize="15sp" />
        
        <TextView android:id="@+id/tv_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_notMember"
            android:text="@string/tv_loginSignUp"
            android:onClick="signUpNow"
            android:clickable="true"
            android:textColor="#fff"
            android:textSize="15sp" />
        
    </RelativeLayout>
    

</RelativeLayout>